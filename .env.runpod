# Production Environment Variables for RunPod
# Copy this to .env in your RunPod deployment

# Hugging Face Token for model access (REQUIRED)
HF_TOKEN="your_huggingface_token_here"

# Model Configuration
BASE_MODEL="openchat/openchat_3.5"

# API Configuration - PRODUCTION SETTINGS
API_SECRET_KEY="CHANGE-THIS-TO-STRONG-RANDOM-SECRET-IN-PRODUCTION"
API_KEY="CHANGE-THIS-TO-SECURE-API-KEY-FOR-PRODUCTION"
API_HOST="0.0.0.0"
API_PORT=7079

# CORS - Update with your actual Laravel domain
ALLOWED_ORIGINS="https://yourdomain.com,https://api.yourdomain.com"

# Python environment
PYTHONPATH="/workspace"
PYTHONUNBUFFERED="1"

# GPU settings
CUDA_VISIBLE_DEVICES="0"
